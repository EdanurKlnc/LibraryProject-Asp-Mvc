@model List<Book>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Kitap Listesi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Book" asp-action="Create" class="btn btn-info">
                    <i class="bi bi-plus-circle"></i>  Yeni Kitap Ekle
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Kitap ID
                    </th>
                    <th>
                        Kitap İsmi
                    </th>
                    <th>
                        Yazarı
                    </th>
                    <th>
                        Yayın Tarihi
                    </th>
                    <th>
                        Sayfa Sayısı
                    </th>
                    <th>
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {

                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.PublicationDate</td>
                        <td>@book.PageCount</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-trash-fill"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>





